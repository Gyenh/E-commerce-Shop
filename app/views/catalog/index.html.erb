<h1>Catalogue produit</h1>
<%= link_to "Panier !", carts_path, class:"btn btn-danger" %>
<% if user_signed_in? %>
<%= link_to "Mon compte !", edit_user_registration_path, class:"btn btn-success" %>
<%= link_to "Se deconnecter !", destroy_user_session_path, method: :delete, class:"btn btn-danger" %>
<% else %>
<%= link_to "Se connecter !", new_user_session_path, class:"btn btn-success" %>
<% end %>

<% cache @products do %>
  <% @products.each do |product| %>
    <% cache product do %>
    <div class="row mb-4">
      <div class="card w-50 bg-light">
        <div class="card-body">
          <h2 class="card-title"><%= product.title %></h2>
          <div class="row">
            <div class="col-6">
              <%= image_tag(product.image_url, width: "200") %>
            </div>
            <div class="col-6">
              <div class="card-text"><%= product.description %></div>
            </div>
          </div>
        </div>
        <div class="card-footer text-center font-weight-bold">
          <%= number_to_currency product.price, unit: 'â‚¬', separator: ',', format: '%n %u' %>
          <%= button_to 'Ajouter au panier', line_items_path(product_id: product), class: 'btn btn-primary' %>
        </div>
      </div>
    </div>
    <% end %>
    <% end %>
    <% end %>
